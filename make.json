{
	"build_type": "static",

	"target_name": "xgk-aux",

	"variables":
	{
		"gcc-x64":
		{
			"CUSTOM_CPPFLAGS": "-fPIC"
		}
	},

	"include_directories": "$(SRC)",

	"source_files":
	{
		"internal":
		{
			"cpp":
			[
				{
					"source": "$(SRC)/meas/meas.cpp",
					"headers": "$(SRC)/meas/meas.h"
				},

				{
					"source": "$(SRC)/transition/transition.cpp",

					"headers":
					[
						"$(SRC)/transition-stack/transition-stack.h",
						"$(SRC)/transition/transition.h"
					]
				},

				{
					"source": "$(SRC)/transition-stack/transition-stack.cpp",

					"headers":
					[
						"$(SRC)/transition-stack/transition-stack.h",
						"$(SRC)/transition/transition.h"
					]
				}
			]
		}
	}
}
